<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/main_container"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="233dp"
        android:layout_height="142dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="130dp"
        android:src="@drawable/instagram"
        android:id="@+id/logo"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#E1E1E1"
        android:background="#79c5c3c3"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="280dp"
        android:elevation="2dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#E1E1E1"
        android:background="#79c5c3c3"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="350dp"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:gravity="center"
        android:textColor="#79c5c3c3"
        android:background="@drawable/login"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="420dp"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget"
        android:textColor="#E1E1E1"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="490dp"/>

    <View
        android:layout_width="130dp"
        android:layout_height="0.2dp"
        android:id="@+id/view1"
        android:background="#E1E1E1"
        android:layout_marginVertical="535dp"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#E1E1E1"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="525dp"/>
    <View
        android:layout_width="130dp"
        android:layout_height="0.2dp"
        android:background="#E1E1E1"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="535dp"
        android:layout_marginHorizontal="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in with Facebook"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableLeft="@drawable/fb"
        android:textColor="#fff"
        android:drawablePadding="10dp"
        android:drawableTint="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="560dp"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acc"
        android:textColor="#E1E1E1"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signup"
        android:padding="15dp"
        android:layout_marginTop="50dp"/>


</RelativeLayout>